<h1 class="text-center">User list</h1>

<div class="center-block text-center">
  <%= link_to "Add new user", new_admin_user_path,  class: "btn btn-default btn-sm" %>
</div>

<%= paginate(@users) %>

<table class="table table-striped">

<% @users.each do |user| %>
  <tr>

    <td><%= user.email %></td>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= user.role %></td>
    <td>
      <%= link_to '<span class="glyphicon glyphicon-search" aria-hidden="true"></span>'.html_safe, admin_user_path(user) %>
    </td>
    <td><%= link_to '<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>'.html_safe, edit_admin_user_path(user) %></td>
    <td><%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, admin_user_path(user), method: :delete, data: {confirm: "You sure?"} %></td>
  </tr>
  
<% end %>

</table>
<%= paginate(@users) %>

